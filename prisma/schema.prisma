generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

 
model User {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  email                       String
  password                    String
  statu_user_role             Statu_user_role[]
  user_image                  UserImage[]
  userBus                     userBus[]
  userArret                   userArret[]
  userTypeBus                 UserTypeBus[]
  controlleurArret            ControlleurArret[]
}





model Role {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  statu_user_role             Statu_user_role[]
}

model Statu {
  id                          Int                       @id @default(autoincrement())
  labelle                     String
  role                        Statu_user_role[]
}

model Statu_user_role {
  id                          Int                       @id @default(autoincrement())
  userId                      Int
  roleId                      Int                 
  statuId                     Int                 
  date                        DateTime                  @default(now())
  Role                        Role                      @relation(fields: [roleId], references: [id])
  Statu                       Statu                     @relation(fields: [statuId], references: [id])
  user                        User                      @relation(fields: [userId], references: [id])
}


model Image {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  user_image                  UserImage[]

}

model UserImage {
  id                          Int                       @id @default(autoincrement())
  userId                      Int
  imageId                     Int
  date                        DateTime                  @default(now())
  image                       Image                     @relation(fields: [imageId], references: [id])
  user                        User                      @relation(fields: [userId], references: [id])
}

model TypeBus {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  bus                         Bus[]
  typeBusArret                TypeBusArret[]
  busCheckPoint               busCheckPoint[]
  busTypeBus                  BusTypeBus[]
  userTypeBus                 UserTypeBus[]
}

model Bus {
  id                          Int                       @id @default(autoincrement())
  nom                         String
  matricule                   String
  idStatu                     Int
  typeBusId                   Int
  typeBus                     TypeBus                   @relation(fields: [typeBusId], references: [id])
  userBus                     userBus[]
  busTypeBus                  BusTypeBus[]
}

model Arret{
  id                          Int                       @id @default(autoincrement())
  nom                         String
  typeBusArret                TypeBusArret[]
  busCheckPoint               busCheckPoint[]
  coordonneeArret             CoordonneeArret[]
  userArret                   userArret[]
  controlleurArret            ControlleurArret[]

}

model TypeBusArret {
  id                          Int                       @id @default(autoincrement())
  typeBusId                   Int
  arretId                     Int 
  nbpa                        Int                       @default(0)
  typeBus                     TypeBus                   @relation(fields: [typeBusId], references: [id])
  arret                       Arret                     @relation(fields: [arretId], references: [id])
}


model CheckPoint {
  id                          Int                       @id @default(autoincrement())
  nom                         String 
  busCheckPoint               busCheckPoint[]
}

model busCheckPoint {
  id                          Int                       @id @default(autoincrement())
  typeBusId                   Int
  arretId                     Int
  checkPointId                Int
  typeBus                     TypeBus                   @relation(fields: [typeBusId], references: [id])
  arret                       Arret                     @relation(fields: [arretId], references: [id])
  checkPoint                  CheckPoint                @relation(fields: [checkPointId], references: [id])
}

model Coordonnee {
  id                          Int                       @id @default(autoincrement())
  lat                         Float
  long                        Float
  coordonneeArret             CoordonneeArret[]
}

model CoordonneeArret {
  id                          Int                       @id @default(autoincrement())
  coordonneeId                Int
  arretId                     Int
  coordonnee                  Coordonnee                @relation(fields: [coordonneeId],references: [id])
  arret                       Arret                     @relation(fields: [arretId],references: [id])
}

model userBus {
  id                          Int                       @id @default(autoincrement())
  userId                      Int
  busId                       Int
  user                        User                      @relation(fields: [userId],references: [id])
  bus                         Bus                       @relation(fields: [busId], references: [id])
}

model userArret {
  id                          Int                       @id @default(autoincrement())
  userId                      Int
  arretId                     Int
  user                        User                      @relation(fields: [userId],references: [id])
  arret                       Arret                     @relation(fields: [arretId], references: [id])
}

model BusTypeBus {
  id                          Int                       @id @default(autoincrement())
  busId                       Int
  typeBusId                   Int
  bus                         Bus                       @relation(fields: [busId], references: [id])
  typeBus                     TypeBus                   @relation(fields: [typeBusId], references: [id])
}

model UserTypeBus {
  id                          Int                       @id @default(autoincrement())
  userId                      Int
  typeBusId                   Int
  date                        DateTime                  @default(now())
  typeBus                     TypeBus                     @relation(fields: [typeBusId], references: [id])
  user                        User                      @relation(fields: [userId], references: [id])
}

model ControlleurArret{
  id                          Int                       @id @default(autoincrement())
  userId                      Int
  arretId                     Int
  user                        User                      @relation(fields: [userId], references: [id])
  arret                       Arret                     @relation(fields: [arretId],references: [id])
}